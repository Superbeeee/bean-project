{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": ["error", 2], // 强制使用两个空格缩进
        "linebreak-style": "off", // 强制使用 Unix 风格的换行符
        "quotes": "off", // 强制使用双引号
        "semi": "off", // 强制语句末尾使用分号
        "vue/no-multiple-template-root": "off"
      }
}
